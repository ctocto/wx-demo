page{
    background: #1C3654;
}
.top-tip{
    width: 100vw;
    border-top:1rpx solid #666;
    border-bottom:1rpx solid #666;
    background: rgba(0, 0, 0, 0.8);
    text-align: center;
}
.top-tip .hot-green-txt{
    font-size: 1rem;
}
.top-tip .tip-txt{
    font-size: 0.8rem;
    color: burlywood;
    white-space: nowrap;
    padding:0.4rem 0 0.4rem 0.05rem;
}
.item{
    width: 96vw;
    margin:0.6rem auto 0;
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
    /*background: rgba(201, 251, 253, 0.5);
    */
    background: rgba(255, 255, 255, 0.8);
    border-radius: 8rpx;
    overflow: hidden;
}
.item .icon{
    flex: 1;
    background: blue;
    margin-right: 0.3rem;
}
.item .info{
    flex: 3;
    padding:0.3rem 0.3rem 0.3rem 0;
}
.info .info-top-box{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.info .car-price{
    font-size: 0.7rem;
    color: #999;
}
.info .car-price .hot-red-txt{
    font-size:1rem; 
}
.info .car-type{
    font-size: 1rem;
    color: #333;
}
.info .car-load, .info .car-size, .info .car-exceed{
    display: block;
    font-size: 0.7rem;
    color: #999;
}